@model IEnumerable<u23693313_HW03.ViewModels.SalesReportViewModel>

<h3>Current Sales Report</h3>
<table class="table table-condensed">
    <tr>
        <th>Date</th>
        <th>Customer</th>
        <th>Product</th>
        <th>Staff</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.order_date.ToString("yyyy-MM-dd")</td>
            <td>@item.CustomerName</td>
            <td>@item.ProductName</td>
            <td>@item.StaffName</td>
            <td>@item.quantity</td>
            <td>@item.list_price.ToString("C")</td>
            <td>@item.Total.ToString("C")</td>
        </tr>
    }
</table>